<div style="padding: 4em">

<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>
  <%= link_to "New  Post", new_post_path %>
<table>
  <thead >
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>POST ID</th>
    <th>User ID</th>
    <th colspan="2">Actions</th>

  </tr>
  </thead>
  <tbody>

    <% @posts.each do |post| %>
    <tr>
      <td> Title:  <%= link_to post.title, post %>  </td>
      <td> Body:  <%= post.body %>  </td>
      <td> ID:  <%= post.id %>  </td>
      <td> User ID: <%= post.user_id %>  </td>
      <% if post.user_id == @user.id %>
      <td>  <%= link_to "Edit", edit_post_path(post.id) %>  </td>
      <td>  <%= link_to "Destroy", post_path(post), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %>  </td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
